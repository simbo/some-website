{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "./src/typings",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
